{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,  // Add this to support JSON imports
    "esModuleInterop": true,   // Add this for better compatibility with CommonJS
    "paths": {
      "*": ["node_modules/*", "src/*"] // Add "src/*" to resolve imports from the `src` folder
    }
  },
  "include": ["src/**/*"],      // Ensure all `src` files are included
  "exclude": ["node_modules"]   // Explicitly exclude node_modules for clarity
}

